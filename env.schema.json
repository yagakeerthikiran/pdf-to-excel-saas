{
  "environments": {
    "local": {
      "required": [
        "NEXT_PUBLIC_SUPABASE_URL",
        "NEXT_PUBLIC_SUPABASE_ANON_KEY",
        "NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY",
        "NEXT_PUBLIC_SENTRY_DSN",
        "NEXT_PUBLIC_POSTHOG_KEY",
        "NEXT_PUBLIC_POSTHOG_HOST",
        "AWS_S3_BUCKET_NAME",
        "DATABASE_URL"
      ],
      "optional": [
        "STRIPE_SECRET_KEY",
        "SUPABASE_SERVICE_ROLE_KEY",
        "REDIS_URL"
      ]
    },
    "staging": {
      "required": [
        "AWS_ACCESS_KEY_ID",
        "AWS_SECRET_ACCESS_KEY",
        "AWS_REGION",
        "AWS_S3_BUCKET_NAME",
        "DATABASE_URL",
        "SUPABASE_URL",
        "SUPABASE_SERVICE_ROLE_KEY",
        "STRIPE_SECRET_KEY",
        "STRIPE_WEBHOOK_SECRET",
        "NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY",
        "NEXT_PUBLIC_STRIPE_PRO_PRICE_ID",
        "NEXT_PUBLIC_SUPABASE_URL",
        "NEXT_PUBLIC_SUPABASE_ANON_KEY",
        "NEXT_PUBLIC_SENTRY_DSN",
        "SENTRY_ORG",
        "SENTRY_PROJECT",
        "SENTRY_AUTH_TOKEN",
        "NEXT_PUBLIC_POSTHOG_KEY",
        "NEXT_PUBLIC_POSTHOG_HOST",
        "POSTHOG_PROJECT_API_KEY"
      ]
    },
    "production": {
      "required": [
        "AWS_ACCESS_KEY_ID",
        "AWS_SECRET_ACCESS_KEY",
        "AWS_REGION",
        "AWS_S3_BUCKET_NAME",
        "DATABASE_URL",
        "NEXT_PUBLIC_APP_URL",
        "BACKEND_URL",
        "BACKEND_API_KEY",
        "SUPABASE_URL",
        "SUPABASE_SERVICE_ROLE_KEY",
        "STRIPE_SECRET_KEY",
        "STRIPE_WEBHOOK_SECRET",
        "NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY",
        "NEXT_PUBLIC_STRIPE_PRO_PRICE_ID",
        "NEXT_PUBLIC_SUPABASE_URL",
        "NEXT_PUBLIC_SUPABASE_ANON_KEY",
        "NEXT_PUBLIC_SENTRY_DSN",
        "SENTRY_ORG",
        "SENTRY_PROJECT",
        "SENTRY_AUTH_TOKEN",
        "NEXT_PUBLIC_POSTHOG_KEY",
        "NEXT_PUBLIC_POSTHOG_HOST",
        "POSTHOG_PROJECT_API_KEY",
        "SLACK_WEBHOOK_URL",
        "GITHUB_TOKEN",
        "JWT_SECRET_KEY",
        "ENCRYPTION_KEY",
        "AUTO_FIX_ENABLED",
        "MONITORING_INTERVAL",
        "ERROR_THRESHOLD"
      ]
    }
  },
  "validation_rules": {
    "AWS_ACCESS_KEY_ID": {
      "pattern": "^AKIA[0-9A-Z]{16}$",
      "description": "AWS Access Key ID format"
    },
    "AWS_REGION": {
      "pattern": "^ap-southeast-2$",
      "description": "Must be Sydney region (ap-southeast-2)"
    },
    "DATABASE_URL": {
      "pattern": "^postgresql://",
      "description": "Must be a valid PostgreSQL connection string"
    },
    "STRIPE_SECRET_KEY": {
      "pattern": "^sk_(test_|live_)[0-9a-zA-Z]{24,}$",
      "description": "Valid Stripe secret key format"
    },
    "STRIPE_WEBHOOK_SECRET": {
      "pattern": "^whsec_[0-9a-zA-Z]{32,}$",
      "description": "Valid Stripe webhook secret format"
    },
    "NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY": {
      "pattern": "^pk_(test_|live_)[0-9a-zA-Z]{24,}$",
      "description": "Valid Stripe publishable key format"
    },
    "SENTRY_DSN": {
      "pattern": "^https://[0-9a-f]+@[0-9a-z\\.]+/[0-9]+$",
      "description": "Valid Sentry DSN URL format"
    },
    "SUPABASE_URL": {
      "pattern": "^https://[a-z0-9]+\\.supabase\\.co$",
      "description": "Valid Supabase project URL"
    },
    "JWT_SECRET_KEY": {
      "min_length": 32,
      "description": "JWT secret must be at least 32 characters"
    },
    "ENCRYPTION_KEY": {
      "min_length": 32,
      "description": "Encryption key must be at least 32 characters"
    }
  }
}